<UserControl x:Class="Schrauben.GUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Schrauben"
             mc:Ignorable="d" 
             d:DesignHeight="450"
             d:DesignWidth="800"
             >
    <Grid Background="BlanchedAlmond" >
<!--#region Background-->
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
<!--#endregion--> 
<!--#region  Header-->
        <Grid Grid.ColumnSpan="2"
              Background="Wheat">
            <Label Content="Hallo"
                   Foreground="Black"
                   HorizontalContentAlignment="Center"
                   FontSize="28"
                   FontFamily ="/Schrauben;component/Fonts/#Girassol"
                   FontWeight="Medium"
                   Margin=" 20"/>

        </Grid>
<!--#endregion--> 
        
        <Grid
              Grid.Row="1" Background="White">

            <Image x:Name="Schraube" 
                   Source="Images/SchraubenBild.png"/>

        </Grid>

    </Grid>
</UserControl>
