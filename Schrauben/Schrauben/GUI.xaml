<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Schrauben"
             xmlns:Generic="clr-namespace:System.Collections.Generic;assembly=mscorlib" xmlns:System="clr-namespace:System;assembly=mscorlib" x:Name="DesignerMainWindow" x:Class="Schrauben.GUI"
             mc:Ignorable="d" 
             d:DesignHeight="450"
             d:DesignWidth="800"
             Background="Transparent"
             Foreground="Transparent" 
             >

    <Border x:Name="main"
            CornerRadius="60"
            Background="BlanchedAlmond">


        <Grid Background="Transparent"  >




            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="70"/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>


            <Grid Grid.Row="0"
                  Height="40"
                  VerticalAlignment="Top" 
                  Grid.ColumnSpan ="2">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>

                </Grid.ColumnDefinitions>

                <Button x:Name="_minime"
                        Grid.Column="7"
                        Grid.Row="0"
                        Content="Exit"
                        Click="_minimize_Click" >

                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="TextElement.FontFamily" Value=" Fonts/#FreckleFace"/>
                            <Setter Property="Background" Value="#FF4C70"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="Green" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>

                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="55"
                                Height="20"
                                Margin="2.5"
                                CornerRadius="12"
                                Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"
                                              HorizontalAlignment="Center"/>
                            </Border>

                        </ControlTemplate>
                    </Button.Template>


                </Button>


            </Grid>



            <Grid   Grid.ColumnSpan="2"
                    Background="Transparent"
                    Margin="10"
                    Grid.Row="1"
                    >
                <Label Content="{Binding Begrüßung}"
                       Foreground="Black"
                       HorizontalContentAlignment="Center"
                       FontSize="28"
                       FontFamily ="Baskerville Old Face"
                       FontWeight="Medium"
                       />

            </Grid>


            <Grid
                  Grid.Row="2">

                <Image x:Name="Schraube" 
                       Source="Images/SchraubenBild.png"/>

            </Grid>

            <Grid Grid.Row="2"
                  Grid.Column="2"
                  VerticalAlignment="Center" >

                <Grid.RowDefinitions>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>


                <StackPanel HorizontalAlignment="Center" >

                    <Label Content="Material:"
                           FontSize="14"
                           Margin="5"
                           HorizontalContentAlignment="Right" />

                    <Label Content="Schraubenart:"
                           FontSize=" 14"
                           HorizontalContentAlignment="Right" />

                    <Label Content="Nenndurchmesser:"
                           FontSize="14"
                           Margin="5"
                           HorizontalContentAlignment="Right" />

                    <Label Content="Schraubenfestigkeit"
                           FontSize="14"
                           HorizontalContentAlignment ="Right"/>

                </StackPanel>

                <StackPanel Grid.Column="1"
                            HorizontalAlignment="Left" >
                    <ComboBox Height="25"
                              Width="85"
                              ItemsSource="{Binding MaterialSammlung}"
                              SelectedIndex="0"
                              Margin="5"/>

                    <ComboBox  Height="25"
                               Width="100"
                               ItemsSource="{Binding ArtenSammlung}"
                               SelectedIndex="0"
                               Margin="5"/>

                    <ComboBox Height="25"
                          ItemsSource="{Binding GewindeSammlung}"
                          SelectedIndex="0"
                              Margin="5"/>

                    <ComboBox Height="25"
                              ItemsSource="{Binding Schraubenfestigkeit}"
                              SelectedIndex="0"
                              Margin="5"/>

                </StackPanel>

                <StackPanel Grid.Column="2"
                            HorizontalAlignment="Center">

                    <Label Content="Schraubenlänge in mm:"
                           Margin="5"
                           HorizontalContentAlignment="Right"
                           FontSize="14"/>
                    
                    <Label Content="Gewindelänge in mm:"
                           HorizontalContentAlignment="Right"
                           FontSize ="14"/>
                    <Label Content="Kopfform:"
                           Margin="5"
                           HorizontalContentAlignment="Right"
                           FontSize ="14"/>

                    <Label Content="Drehsinn"
                           FontSize="14"
                           HorizontalContentAlignment="Right"
                           Margin="5"/>

                </StackPanel>

                <StackPanel Grid.Column ="3"
                            HorizontalAlignment="Left" 
                            Margin="5">

                    <TextBox Width="90"
                             Height="25"
                             Grid.Column="0"
                             Grid.Row="1"
                             Margin="5"
                             HorizontalContentAlignment="Center" 
                             VerticalContentAlignment="Center"
                             HorizontalAlignment="Left" />

                    <TextBox Width="80"
                             Height="25"
                             Grid.Column="1"
                             Grid.Row="1"
                             Margin="5"
                             HorizontalContentAlignment="Center" 
                             VerticalContentAlignment="Center"
                             HorizontalAlignment="Left"/>

                    <ComboBox 
                          Height="25"
                          Grid.Column="2"
                          Grid.Row="2"
                          ItemsSource="{Binding Kopfform}"
                          Margin="5"/>

                    <RadioButton GroupName="Drehsinn"
                                 Content=" Links"
                                 Margin="0,5,0,0"/>
                    <RadioButton GroupName="Drehsinn"
                                 Content="Rechts"/>



                </StackPanel>



            </Grid>


        </Grid>

    </Border>
</UserControl>
