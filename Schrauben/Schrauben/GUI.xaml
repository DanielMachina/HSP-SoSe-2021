<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Schrauben"
             xmlns:Generic="clr-namespace:System.Collections.Generic;assembly=mscorlib" xmlns:System="clr-namespace:System;assembly=mscorlib" x:Name="DesignerMainWindow" x:Class="Schrauben.GUI"
             mc:Ignorable="d" 
             d:DesignHeight="500"
             d:DesignWidth="900"
             Background="Transparent"
             Foreground="Transparent" 
             >

    <Border x:Name="bor_main"
            CornerRadius="20"
            Background="BlanchedAlmond">

        <Grid x:Name="grd_main"
              Background="Transparent"  >

            <!--#region  Hintergrid-->
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="70"/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <!--#endregion-->

            <!--#region  Kopfzeile-->
            <!--#region  Griddefoben-->
            <Grid Grid.Row="0"
                  Height="40"
                  VerticalAlignment="Top" 
                  Grid.ColumnSpan ="2">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>

                </Grid.ColumnDefinitions>
                <!--#endregion-->
                <!--#region  Button Exit-->
                <Button x:Name="_exit"
                        Grid.Column="7"
                        Grid.Row="0"
                        Content="Exit"
                        Click="_exit_Click"  >

                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Red"/>
                            <Setter Property="Cursor" Value="Hand"/>

                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="Green" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>

                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="55"
                                Height="20"
                                Margin="2.5"
                                CornerRadius="12"
                                Background="{TemplateBinding Background}">

                                <ContentPresenter VerticalAlignment="Center"
                                              HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    
                </Button>

                <Button x:Name="_minimize"
                        Grid.Column="6"
                        Grid.Row="0"
                        Content="minimize"
                        Click="_minimize_Click" 
                        HorizontalAlignment="Right" >
                    
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Red"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="Green"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>

                    <Button.Template>
                        <ControlTemplate TargetType="Button" >
                            <Border Width="55"
                                Height="20"
                                Margin="2.5"
                                CornerRadius="12"
                                Background="{TemplateBinding Background}">

                                <ContentPresenter VerticalAlignment="Center"
                                                  HorizontalAlignment="Center" />
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    
                </Button>
                
            </Grid>
            
            
            <!--#endregion-->
            <!--#endregion-->

            <!--#region  Einleitung-->
            <Grid   Grid.ColumnSpan="2"
                    Background="Transparent"
                    Margin="10"
                    Grid.Row="1"
                    >
                <Label Content="{Binding Begrüßung}"
                       Foreground="Black"
                       HorizontalContentAlignment="Center"
                       FontSize="28"
                       FontFamily ="Baskerville Old Face"
                       FontWeight="Medium"
                       />

            </Grid>
            <!--#endregion-->

            <!--#region  Mitte-->
            <!--#region  Bild-->
            <Grid
                  Grid.Row="2">

                <Image x:Name="Schraube" 
                       Source="Images/SchraubenBild.png"
                       Height="140"
                       Width="360"/>

            </Grid>
            <!--#endregion-->

            <!--#region  Mittelgrid-->
            <Grid Grid.Row="2"
                  Grid.Column="2"
                  VerticalAlignment="Center" >

                <Grid.RowDefinitions>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <!--#endregion-->
                <!--#region  Eingabe-->

                <StackPanel>

                    <StackPanel Orientation="Horizontal" >

                        <Label Content="Material:"
                           FontSize="14"
                           Margin="5" 
                               HorizontalAlignment="Right" />

                        <ComboBox Height="25"
                              Width="85"
                              ItemsSource="{Binding MaterialSammlung}"
                              SelectedIndex="0"
                              Margin="5" 
                                  />

                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        
                        <Label Content="Schraubenart:"
                           FontSize=" 14"
                               HorizontalContentAlignment="Right"  />

                        <ComboBox  Height="25"
                               Width="100"
                               ItemsSource="{Binding ArtenSammlung}"
                               SelectedIndex="0"
                               Margin="5"/>

                    </StackPanel>

                    <StackPanel Orientation="Horizontal" >
                        
                        <Label Content="Durchmesser:"
                           FontSize="14"
                           Margin="5"/>


                        <ComboBox Height="25"
                              ItemsSource="{Binding GewindeSammlung}"
                              SelectedIndex="0"
                              Margin="5"/>
                        
                    </StackPanel>


                    <StackPanel Orientation="Horizontal" >
                        
                        <Label Content="Festigkeit:"
                           FontSize="14"/>

                        <ComboBox Height="25"
                              ItemsSource="{Binding Schraubenfestigkeit}"
                              SelectedIndex="0"
                              Margin="5"/>

                    </StackPanel>

                </StackPanel>


                <StackPanel Grid.Column="2">

                    <StackPanel Orientation="Horizontal" >

                        <Label Content="Schraubenänge:"
                           Margin="5"
                           HorizontalContentAlignment="Right"
                           FontSize="14"/>

                        <TextBox x:Name="txtbx_Schraubenlänge" 
                             Width="50"
                             Height="25"
                             Grid.Column="0"
                             Grid.Row="1"
                             Margin="5"
                             HorizontalContentAlignment="Center" 
                             VerticalContentAlignment="Center"
                             HorizontalAlignment="Left" />


                    </StackPanel>

                    <StackPanel Orientation="Horizontal" >

                        <Label Content="Gewindelänge:"
                           HorizontalContentAlignment="Right"
                           FontSize ="14"/>

                        <TextBox x:Name="txtbx_Gewindelänge"
                             Width="50"
                             Height="25"
                             Grid.Column="1"
                             Grid.Row="1"
                             Margin="5"
                             HorizontalContentAlignment="Center" 
                             VerticalContentAlignment="Center"
                             HorizontalAlignment="Left"/>


                    </StackPanel>

                    <StackPanel Orientation="Horizontal" >

                        <Label Content="Kopfform:"
                           Margin="5"
                           HorizontalContentAlignment="Right"
                           FontSize ="14"/>

                        <ComboBox x:Name="cb_Kopfform" 
                          Height="25"
                          Grid.Column="2"
                          Grid.Row="2"
                          ItemsSource="{Binding Kopfform}"
                          Margin="5"/>


                    </StackPanel>


                    <StackPanel Orientation="Horizontal">
                        
                        <Label Content="Drehsinn"
                           FontSize="14"
                           HorizontalContentAlignment="Right"
                           Margin="5"/>

                        <StackPanel>
                            
                            <RadioButton GroupName="Drehsinn"
                                 Content=" Links"
                                 Margin="0,5,0,0"/>
                            <RadioButton GroupName="Drehsinn"
                                 Content="Rechts"/>
                            
                        </StackPanel>


                    </StackPanel>

                </StackPanel>
                <!--#endregion-->


            </Grid>
            <!--#endregion-->

            <!--#region Ausgabe-->
            <Grid Grid.Row="3"
                  Grid.Column="0"
                  Margin="40,10,0,0">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <Label Content="Ausgabe 1"
                               Margin="10,0"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               FontSize="14"/>

                        <TextBox Text="Ausgabe 1"
                                 Foreground="Black"
                                 VerticalAlignment="Center"
                                 FontSize="14"/>

                    </StackPanel>

                    <StackPanel Orientation="Horizontal" >
                        <Label Content="Ausgabe 2"
                               Margin="10,0"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               FontSize="14"/>

                        <TextBox Text="Ausgabe 2"
                                 Foreground="Black"
                                 VerticalAlignment="Center"
                                 FontSize="14"/>

                    </StackPanel>

                    <StackPanel Orientation="Horizontal" >
                        <Label Content="Ausgabe 3"
                               Margin="10,0"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               FontSize="14"/>

                        <TextBox Text="Ausgabe 3"
                                 Foreground="Black"
                                 VerticalAlignment="Center"
                                 FontSize="14"/>

                    </StackPanel>

                    <StackPanel Orientation="Horizontal" >
                        <Label Content="Ausgabe 4"
                               Margin="10,0"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               FontSize="14"/>

                        <TextBox Text="Ausgabe 4"
                                 Foreground="Black"
                                 VerticalAlignment="Center"
                                 FontSize="14"/>

                    </StackPanel>

                </StackPanel>
            </Grid>
            <!--#endregion-->

        </Grid>



    </Border>
</UserControl>
