<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Schrauben"
             xmlns:Generic="clr-namespace:System.Collections.Generic;assembly=mscorlib" xmlns:System="clr-namespace:System;assembly=mscorlib" x:Name="DesignerMainWindow" x:Class="Schrauben.GUI"
             mc:Ignorable="d" 
             d:DesignHeight="450"
             d:DesignWidth="800"
             Background="Transparent"
             Foreground="Transparent" 
             >

    <Border x:Name="main"
            CornerRadius="60"
            Background="BlanchedAlmond">

        
        <Grid Background="Transparent"  >




            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>


            <Grid Grid.Row="0"
                  Height="25"
                  VerticalAlignment="Top" 
                  Grid.ColumnSpan ="2">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>

                </Grid.ColumnDefinitions>



            </Grid>

            <Grid Grid.ColumnSpan="2"
              Background="Transparent"  >
                <Label Content="{Binding Begrüßung}"
                       Foreground="Black"
                       HorizontalContentAlignment="Center"
                       FontSize="28"
                       FontFamily ="Baskerville Old Face"
                       FontWeight="Medium"
                       Margin=" 20"/>

            </Grid>


            <Grid
                  Grid.Row="1">

                <Image x:Name="Schraube" 
                       Source="Images/SchraubenBild.png"/>

            </Grid>

            <Grid Grid.Row="1"
              Grid.Column="2"
              Background="Aqua" >

                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>


                <ComboBox Width="90"
                      Height="25"
                      ItemsSource="{Binding MaterialSammlung}"
                      SelectedIndex="0"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center" 
                      Grid.Column="0"
                      Grid.Row ="0"/>

                <ComboBox Width="100"
                      Height="25"
                      HorizontalAlignment="Center"
                      Grid.Column="1"
                      Grid.Row="0"
                      ItemsSource="{Binding ArtenSammlung}"
                      SelectedIndex="0"/>



                <ComboBox Width="60"
                      Height="25"
                      HorizontalAlignment="Center"
                      Grid.Column="2"
                      Grid.Row="0"
                      ItemsSource="{Binding GewindeSammlung}"
                      SelectedIndex="0"/>

                <ComboBox Width="60"
                      Height="25"
                      HorizontalAlignment="Center"
                      Grid.Column="0"
                      Grid.Row="1"
                      />

                <ComboBox Width="60"
                      Height="25"
                      HorizontalAlignment="Center"
                      Grid.Column="1"
                      Grid.Row="1"/>

                <ComboBox Width="60"
                      Height="25"
                      HorizontalAlignment="Center"
                      Grid.Column="2"
                      Grid.Row="2"/>


            </Grid>


        </Grid>
        
    </Border>
</UserControl>
